@model PostsOverviewViewModel
@{
    ViewData["Title"] = "Forum Posts";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 mb-2">
                <i class="fas fa-comments text-primary me-2"></i>Forum Posts
            </h1>
            <p class="text-muted mb-0">
                @Model.TotalPosts.ToString("N0") discussions across all categories
            </p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a href="/Posts/Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>New Post
            </a>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form method="get" class="row g-3 align-items-end">
                        <!-- Search -->
                        <div class="col-md-4">
                            <label for="search" class="form-label small text-muted">Search Posts</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" id="search" name="search" 
                                       value="@Model.SearchQuery" placeholder="Search titles and content...">
                            </div>
                        </div>

                        <!-- Category Filter -->
                        <div class="col-md-2">
                            <label for="category" class="form-label small text-muted">Category</label>
                            <select class="form-select" id="category" name="categoryId">
                                <option value="">All Categories</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="
                                            @(Model.Filter.CategoryId == category.Id ? "selected" : "")">
                                        @category.Name
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Sort By -->
                        <div class="col-md-2">
                            <label for="sort" class="form-label small text-muted">Sort By</label>
                            <select class="form-select" id="sort" name="sortBy">
                                <option value="@(Model.CurrentSort == "recent" ? "selected" : "")">Most Recent</option>
                                <option value="@(Model.CurrentSort == "popular" ? "selected" : "")">Most Popular</option>
                                <option value="@(Model.CurrentSort == "replies" ? "selected" : "")">Most Replies</option>
                                <option value="@(Model.CurrentSort == "views" ? "selected" : "")">Most Views</option>
                                <option value="@(Model.CurrentSort == "oldest" ? "selected" : "")">Oldest First</option>
                            </select>
                        </div>

                        <!-- Time Filter -->
                        <div class="col-md-2">
                            <label for="time" class="form-label small text-muted">Time Period</label>
                            <select class="form-select" id="time" name="timeFilter">
                                <option value="@(Model.Filter.TimeFilter == "all" ? "selected" : "")">All Time</option>
                                <option value="@(Model.Filter.TimeFilter == "today" ? "selected" : "")">Today</option>
                                <option value="@(Model.Filter.TimeFilter == "week" ? "selected" : "")">This Week</option>
                                <option value="@(Model.Filter.TimeFilter == "month" ? "selected" : "")">This Month</option>
                            </select>
                        </div>

                        <!-- Filter Button -->
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="fas fa-filter me-1"></i>Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Filter Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex gap-2 flex-wrap">
                <a href="/Posts?sortBy=recent" class="btn btn-sm @(Model.CurrentSort == "recent" ? "btn-primary" : "btn-outline-secondary")">
                    <i class="fas fa-clock me-1"></i>Recent
                </a>
                <a href="/Posts?sortBy=popular" class="btn btn-sm @(Model.CurrentSort == "popular" ? "btn-primary" : "btn-outline-secondary")">
                    <i class="fas fa-fire me-1"></i>Popular
                </a>
                <a href="/Posts?showPinnedOnly=true" class="btn btn-sm @(Model.Filter.ShowPinnedOnly ? "btn-warning" : "btn-outline-warning")">
                    <i class="fas fa-thumbtack me-1"></i>Pinned
                </a>
                <a href="/Posts" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-refresh me-1"></i>Clear Filters
                </a>
            </div>
        </div>
    </div>

    <!-- Posts List -->
    <div class="row">
        <div class="col-12">
            @if (Model.Posts.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var post in Model.Posts)
                            {
                                <div class="list-group-item list-group-item-action border-0 py-3 @(post.HasUnreadReplies ? "bg-light" : "")">
                                    <div class="row align-items-center">
                                        <!-- Post Info -->
                                        <div class="col-md-7">
                                            <div class="d-flex align-items-start">
                                                <!-- Status Icons -->
                                                <div class="me-3 d-flex flex-column align-items-center">
                                                    @if (post.IsPinned)
                                                    {
                                                        <i class="fas fa-thumbtack text-warning mb-1" title="Pinned"></i>
                                                    }
                                                    @if (post.IsLocked)
                                                    {
                                                        <i class="fas fa-lock text-muted" title="Locked"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-comment text-primary"></i>
                                                    }
                                                    @if (post.HasUnreadReplies)
                                                    {
                                                        <small class="badge bg-danger rounded-pill mt-1">New</small>
                                                    }
                                                </div>

                                                <!-- Post Content -->
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-2">
                                                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none text-dark fw-semibold">
                                                            @post.Title
                                                        </a>
                                                    </h6>
                                                    
                                                    <!-- Post Meta -->
                                                    <div class="d-flex align-items-center gap-3 mb-2">
                                                        <small class="text-muted">
                                                            <i class="fas fa-user me-1"></i>
                                                            <strong>@post.AuthorName</strong>
                                                        </small>
                                                        <span class="badge bg-@post.CategoryColor">@post.CategoryName</span>
                                                        <small class="text-muted">
                                                            <i class="fas fa-clock me-1"></i>
                                                            @post.CreatedAt.ToString("MMM dd, yyyy")
                                                        </small>
                                                    </div>

                                                    <!-- Tags -->
                                                    @if (post.Tags.Any())
                                                    {
                                                        <div class="d-flex gap-1 flex-wrap">
                                                            @foreach (var tag in post.Tags.Take(3))
                                                            {
                                                                <span class="badge bg-light text-dark border">#@tag</span>
                                                            }
                                                            @if (post.Tags.Count > 3)
                                                            {
                                                                <span class="badge bg-light text-muted border">+@(post.Tags.Count - 3) more</span>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Stats -->
                                        <div class="col-md-2 text-center d-none d-md-block">
                                            <div class="row g-0">
                                                <div class="col-6">
                                                    <div class="text-primary fw-bold">@post.ReplyCount</div>
                                                    <small class="text-muted">replies</small>
                                                </div>
                                                <div class="col-6">
                                                    <div class="text-info fw-bold">@post.ViewCount</div>
                                                    <small class="text-muted">views</small>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Last Activity -->
                                        <div class="col-md-3 text-md-end">
                                            @if (post.LastReplyAt.HasValue)
                                            {
                                                <div class="small">
                                                    <div class="text-muted">Last reply</div>
                                                    <strong>@post.LastReplyBy</strong>
                                                    <div class="text-muted">@post.LastReplyAt.Value.ToString("MMM dd, HH:mm")</div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="small text-muted">
                                                    No replies yet
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                @if (Model.Pagination.TotalPages > 1)
                {
                    <nav aria-label="Posts pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.Pagination.HasPrevious)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.Pagination.CurrentPage - 1)&sortBy=@Model.CurrentSort&search=@Model.SearchQuery&categoryId=@Model.Filter.CategoryId&timeFilter=@Model.Filter.TimeFilter">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&sortBy=@Model.CurrentSort&search=@Model.SearchQuery&categoryId=@Model.Filter.CategoryId&timeFilter=@Model.Filter.TimeFilter">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.Pagination.HasNext)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.Pagination.CurrentPage + 1)&sortBy=@Model.CurrentSort&search=@Model.SearchQuery&categoryId=@Model.Filter.CategoryId&timeFilter=@Model.Filter.TimeFilter">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>

                    <div class="text-center text-muted mt-2">
                        <small>
                            Showing @((Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize + 1) - 
                            @Math.Min(Model.Pagination.CurrentPage * Model.Pagination.PageSize, Model.Pagination.TotalItems) 
                            of @Model.Pagination.TotalItems.ToString("N0") posts
                        </small>
                    </div>
                }
            }
            else
            {
                <!-- Empty State -->
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-search text-muted mb-3" style="font-size: 3rem;"></i>
                        <h4 class="text-muted">No posts found</h4>
                        @if (!string.IsNullOrEmpty(Model.SearchQuery) || Model.Filter.CategoryId.HasValue)
                        {
                            <p class="text-muted mb-3">Try adjusting your search criteria or filters</p>
                            <a href="/Posts" class="btn btn-outline-primary me-2">
                                <i class="fas fa-refresh me-1"></i>Clear Filters
                            </a>
                        }
                        else
                        {
                            <p class="text-muted mb-3">Be the first to start a discussion!</p>
                        }
                        <a href="/Posts/Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Create First Post
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>