@model ModeratorDashboardViewModel
@{
    ViewData["Title"] = "Moderator Dashboard";
}

<div class="container-fluid">
    <!-- Dashboard Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-warning mb-2">
                <i class="fas fa-shield-alt me-3"></i>Moderator Dashboard
            </h1>
            <p class="lead text-muted">Review flagged replies and help manage the community</p>
        </div>
    </div>

    <!-- Primary Action -->
    <div class="row mb-5">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card border-warning shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-gavel text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="card-title text-warning mb-3">Moderation Panel</h3>
                    <p class="card-text text-muted mb-4">
                        Access the main moderation interface to review reports, manage flagged content, and take moderation actions.
                    </p>
                    <a href="/Moderation" class="btn btn-warning btn-lg px-4">
                        <i class="fas fa-arrow-right me-2"></i>Go to Moderation Panel
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Moderation Tools -->
    <div class="row g-4 mb-5">
        <div class="col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-danger bg-gradient rounded-3 p-3 me-3">
                            <i class="fas fa-flag text-white fs-4"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Review Reports</h5>
                        </div>
                    </div>
                    <p class="card-text text-muted mb-3">
                        Review user reports and take appropriate moderation actions
                    </p>
                    <a href="/Moderation/Reports" class="btn btn-outline-danger btn-sm">
                        View Reports <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning bg-gradient rounded-3 p-3 me-3">
                            <i class="fas fa-exclamation-triangle text-white fs-4"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Flagged Content</h5>
                        </div>
                    </div>
                    <p class="card-text text-muted mb-3">
                        Review automatically flagged posts and replies
                    </p>
                    <a href="/Moderation/Flagged" class="btn btn-outline-warning btn-sm">
                        Review Content <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-gradient rounded-3 p-3 me-3">
                            <i class="fas fa-history text-white fs-4"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Moderation Log</h5>
                        </div>
                    </div>
                    <p class="card-text text-muted mb-3">
                        View your recent moderation actions and decisions
                    </p>
                    <a href="/Moderation/Log" class="btn btn-outline-info btn-sm">
                        View Log <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 pb-0">
                    <h2 class="h4 text-center text-dark mb-0">Moderation Overview</h2>
                </div>
                <div class="card-body pt-4">
                    <div class="row g-4">
                        <div class="col-6 col-md-3">
                            <div class="text-center p-3 bg-light rounded-3">
                                <div class="display-6 fw-bold text-danger mb-2">
                                    @Model.PendingReports.ToString("N0")
                                </div>
                                <div class="text-muted small text-uppercase fw-semibold">
                                    Pending Reports
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-center p-3 bg-light rounded-3">
                                <div class="display-6 fw-bold text-warning mb-2">
                                    @Model.FlaggedPosts.ToString("N0")
                                </div>
                                <div class="text-muted small text-uppercase fw-semibold">
                                    Flagged Posts
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-center p-3 bg-light rounded-3">
                                <div class="display-6 fw-bold text-success mb-2">
                                    @Model.ResolvedToday.ToString("N0")
                                </div>
                                <div class="text-muted small text-uppercase fw-semibold">
                                    Resolved Today
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-center p-3 bg-light rounded-3">
                                <div class="display-6 fw-bold text-info mb-2">
                                    @Model.ActiveWarnings.ToString("N0")
                                </div>
                                <div class="text-muted small text-uppercase fw-semibold">
                                    Active Warnings
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0 text-center">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6 col-md-3">
                            <a href="/Moderation/Reports?status=urgent" class="btn btn-outline-danger w-100">
                                <i class="fas fa-exclamation-circle me-2"></i>Urgent Reports
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="/Moderation/Users/Warnings" class="btn btn-outline-warning w-100">
                                <i class="fas fa-user-times me-2"></i>Issue Warning
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="/Moderation/Posts/Recent" class="btn btn-outline-info w-100">
                                <i class="fas fa-clock me-2"></i>Recent Posts
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="/Forum" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-eye me-2"></i>View Forum
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>