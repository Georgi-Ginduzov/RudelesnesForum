@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary mb-2">
                <i class="fas fa-crown me-3"></i>Admin Dashboard
            </h1>
            <p class="lead text-muted">Complete system administration and management</p>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card border-primary shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-cogs text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="card-title text-primary mb-3">Admin Panel</h3>
                    <p class="card-text text-muted mb-4">
                        Access the main administration interface to manage users.
                    </p>
                    <a href="/Admin/Panel" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-arrow-right me-2"></i>Go to Admin Panel
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 pb-0">
                    <h2 class="h4 text-center text-dark mb-0">System Overview</h2>
                </div>
                <div class="card-body pt-4">
                    <div class="row g-4">
                        <div class="col-6 col-md-3">
                            <div class="text-center p-3 bg-light rounded-3">
                                <div class="display-6 fw-bold text-primary mb-2">
                                    @Model.TotalUsersCount.ToString("N0")
                                </div>
                                <div class="text-muted small text-uppercase fw-semibold">
                                    Total Users
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-center p-3 bg-light rounded-3">
                                <div class="display-6 fw-bold text-success mb-2">
                                    @Model.AdminsCount.ToString("N0")
                                </div>
                                <div class="text-muted small text-uppercase fw-semibold">
                                    Admins Count
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-center p-3 bg-light rounded-3">
                                <div class="display-6 fw-bold text-info mb-2">
                                    @Model.ModeratorsCount.ToString("N0")
                                </div>
                                <div class="text-muted small text-uppercase fw-semibold">
                                     Moderators Count
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-center p-3 bg-light rounded-3">
                                <div class="display-6 fw-bold text-warning mb-2">
                                    @Model.UsersCount.ToString("N0")
                                </div>
                                <div class="text-muted small text-uppercase fw-semibold">
                                    Users Count
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>